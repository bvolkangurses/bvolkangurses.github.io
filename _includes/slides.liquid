{% if page.slides %}
  <div class="slides-container">
    <div class="slides-header">
      <h4>Presentation Slides</h4>
      <div class="slides-controls">
        <a href="{{ 'assets/pdf/' | append: page.slides | relative_url }}" target="_blank" class="btn btn-sm btn-outline-primary">
          <i class="fa-solid fa-download"></i> Download PDF
        </a>
        <a href="{{ 'assets/pdf/' | append: page.slides | relative_url }}" target="_blank" class="btn btn-sm btn-outline-secondary">
          <i class="fa-solid fa-external-link"></i> View Full Screen
        </a>
      </div>
    </div>

    <div class="slides-viewer">
      <iframe
        src="{{ 'assets/pdf/' | append: page.slides | relative_url }}"
        width="100%"
        height="600px"
        style="border: 1px solid #ddd; border-radius: 8px;"
      >
        <p>Your browser does not support PDFs. <a href="{{ 'assets/pdf/' | append: page.slides | relative_url }}">Download the PDF</a>.</p>
      </iframe>
    </div>
  </div>

  <style>
    .slides-container {
      margin: 2rem 0;
      border: 1px solid var(--global-divider-color);
      border-radius: 10px;
      overflow: hidden;
    }

    .slides-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      background: var(--global-bg-color);
      border-bottom: 1px solid var(--global-divider-color);
    }

    .slides-header h4 {
      margin: 0;
      color: var(--global-text-color);
    }

    .slides-controls {
      display: flex;
      gap: 0.5rem;
    }

    .slides-viewer {
      background: #f8f9fa;
    }

    .slides-viewer iframe {
      display: block;
      margin: 0;
    }

    @media (max-width: 768px) {
      .slides-header {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
      }

      .slides-viewer iframe {
        height: 400px;
      }
    }
  </style>
{% endif %}
